function adbn_map_theme($existing, $type, $theme, $path) {
  $items = array();

  $items['adbn_bird_share_menu'] = array(
    'template' => 'bird-share-menu',
    'variables' => array(
      'share_url' => NULL,
      'mail_subject' => NULL,
      'mail_body' => NULL,
    ),
    'path' => $path . '/templates'
  );

  return $items;
}
