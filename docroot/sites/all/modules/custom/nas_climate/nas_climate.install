    'entity_label' => $node->title,
    'entity_type' => 'node',
    'entity_bundle' => 'engagement_cards',
    'entity_uuid' => $node->uuid,
  );
  variable_set('nas_park_feature_default_card', $card);

  // Revert nas_file_entity, nas_park_feature, nas_image_styles_feature
  features_revert_module('nas_image_styles_feature');
  features_revert(array(
    'nas_file_entity' => array(
      'file_display',
      'strongarm',
    ),
    'nas_park_feature' => array(
      'views_default',
    ),
    'nas_site_template_feature' => array(
      'page_manager_handlers',
    )
  ));

  // Regenerate the honeypot css file if it does not exist or is outdated.
  $honeypot_css = honeypot_get_css_file_path();
  $honeypot_element_name = variable_get('honeypot_element_name', 'url');
  if (!file_exists($honeypot_css) || !honeypot_check_css($honeypot_element_name)) {
    honeypot_create_css($honeypot_element_name);
  }

  // Set private path.
  $file_private_path = variable_get('file_private_path', FALSE);
  watchdog('nas_climate', 'Variable file_private_path = <pre>' . var_export($file_private_path, TRUE) . '</pre>');
  watchdog('nas_climate', '$_ENV[AH_SITE_ENVIRONMENT: <pre>' . var_export($_ENV['AH_SITE_ENVIRONMENT'], TRUE) . '</pre>');
  watchdog('nas_climate', 'isset($_ENV[AH_SITE_ENVIRONMENT]: <pre>' . var_export(isset($_ENV['AH_SITE_ENVIRONMENT']), TRUE) . '</pre>');
  $message = ($file_private_path == FALSE
    && (
      !isset($_ENV['AH_SITE_ENVIRONMENT'])
      || (
        isset($_ENV['AH_SITE_ENVIRONMENT'])
        && $_ENV['AH_SITE_ENVIRONMENT'] != 'prod'
      )
    ));
  watchdog('nas_climate', 'All condition: <pre>' . var_export($message, TRUE) . '</pre>');
  if (
    $file_private_path == FALSE
    && (
      !isset($_ENV['AH_SITE_ENVIRONMENT'])
      || (
        isset($_ENV['AH_SITE_ENVIRONMENT'])
        && $_ENV['AH_SITE_ENVIRONMENT'] != 'prod'
      )
    )
  ) {
    variable_set('file_private_path', 'sites/default/files/private');
