  $terms = taxonomy_get_tree($vocabulary->vid);
  foreach ($terms as $item) {
    $term = taxonomy_term_load($item->tid);
    $term->field_country_us_ca[LANGUAGE_NONE][0]['value'] = $map[$term->name];
    taxonomy_term_save($term);
