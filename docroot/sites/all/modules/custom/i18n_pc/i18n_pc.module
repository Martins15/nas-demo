    // @todo add access rule.
    'access callback' => TRUE,
    'page callback' => 'i18n_pc_translation_popup_callback_new',
    'type' => MENU_CALLBACK,
  );
  $items['admin/structure/pages/i18n_pc_redirect/%/%'] = array(
