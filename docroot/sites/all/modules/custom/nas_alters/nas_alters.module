/**
 * Implements hook_init().
 */
function nas_alters_init() {
  global $theme;

  if ($theme == 'adminimal') {
    drupal_add_css(drupal_get_path('module', 'nas_alters') . '/css/nas_alters_adminimal.css');
  }

  // Redirect articles only when field_article_redirect is filled and is full node page.
  if (_nas_alters_is_article_full_view_mode_page() && $node = menu_get_object('node')) {
    if ($node->type == 'article' && !empty($node->field_article_redirect[LANGUAGE_NONE][0]['url'])) {
      drupal_goto($node->field_article_redirect[LANGUAGE_NONE][0]['url'], array(), 301);
    }
  }
}

/**
