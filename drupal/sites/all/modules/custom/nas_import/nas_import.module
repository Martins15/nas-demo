      'locality' => $item['location']['city'],
      'thoroughfare' => $item['location']['street'],
      'premise' => $item['location']['additional'],
      'postal_code' => $item['location']['postal_code'],

    );
    $wrapper->field_location_address->set($address);
  }
}
